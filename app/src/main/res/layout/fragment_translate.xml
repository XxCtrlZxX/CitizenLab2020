<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/background_gray">

    <ImageView
        android:id="@+id/dict_title_img"
        android:layout_width="100dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:scaleType="fitEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/title_translate" />

    <EditText
        android:id="@+id/textConvertInput"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edge"
        android:backgroundTint="@color/gray_700"
        android:ems="10"
        android:hint="바꿀 글자나 문장을 넣어주세요."
        android:inputType="textMultiLine"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textSize="22sp"
        android:fontFamily="@font/nanum_myeongjo_bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dict_title_img" />

    <ImageButton
        android:id="@+id/btnTTSRead"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/btn_round"
        android:padding="8dp"
        android:layout_marginStart="24dp"
        android:scaleType="centerInside"
        android:src="@drawable/icon_pronounce"
        android:tint="@color/gray_700"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnTTSWrite" />

    <ImageButton
        android:id="@+id/btnTTSWrite"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_round"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/icon_record"
        android:tint="@color/gray_700"
        app:layout_constraintEnd_toStartOf="@+id/btnTranslate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnTTSRead"
        app:layout_constraintTop_toBottomOf="@+id/textConvertInput" />

    <ImageButton
        android:id="@+id/btnTranslate"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/btn_round"
        android:padding="8dp"
        android:layout_marginEnd="24dp"
        android:scaleType="centerInside"
        android:src="@drawable/bottom_icon_translate"
        android:tint="@color/gray_700"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnTTSWrite" />


