<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/gray_700</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SearchInputStyle" parent="Widget.AppCompat.EditText">
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/round_box</item>
        <item name="backgroundTint">@color/gray_500</item>
        <item name="android:textColorHint">@color/gray_700</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="SearchOptionSwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <!-- 우리말로 검색 스위치 스타일 -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
